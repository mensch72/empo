// State Space DAG
digraph {
	rankdir=TB
	node [fillcolor=lightblue shape=circle style=filled]
	0 [label="Root\n(State 0)" fillcolor=lightgreen style=filled]
	1 [label="State 1"]
	2 [label="State 2"]
	3 [label="Terminal\n(State 3)" fillcolor=lightcoral style=filled]
	0 -> 1
	0 -> 2
	1 -> 3
	2 -> 3
}
